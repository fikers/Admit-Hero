<% provide(:title, "Edit Article") %>
<h1>Update your article</h1>

<div class="col-md-6">
  <%= form_for (@article) do |f| %>
    <%= render 'shared/error_messages_article' %>
  
    <div class="mdl-textfield mdl-js-textfield textfield-demo">
      <%= f.label :title, class: 'mdl-textfield__label' %>
        <%= f.text_field :title, class: 'mdl-textfield__input' %>
      </div>

      <div class="mdl-textfield mdl-js-textfield textfield-demo">
        <%= f.label :content, class: 'mdl-textfield__label' %>
          <%= f.text_field :content, class: 'mdl-textfield__input' %>
      </div>

      <%= f.submit "Post", class: "btn btn-primary" %>
  <% end %>
</div>