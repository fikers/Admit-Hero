<%= provide(:title, 'Post Article') %>


<div class="top-margin">
	<div class="articles">

		<div class="article-form">
			<%= form_for (@article) do |f| %>
				<%= render 'shared/error_messages_article' %>
			
				<div class="mdl-textfield mdl-js-textfield textfield-demo article-form">
						<%= f.label :title, class: 'mdl-textfield__label' %>
			    	<%= f.text_field :title, class: 'mdl-textfield__input' %>
			    </div>

			    <div class="mdl-textfield mdl-js-textfield textfield-demo article-form">
						<%= f.label :description, class: 'mdl-textfield__label' %>
			    	<%= f.text_area :description, class: 'mdl-textfield__input', rows: 3 %>
			    </div>

			    <div class="mdl-textfield mdl-js-textfield textfield-demo article-form">
			    	<%= f.label :content, class: 'mdl-textfield__label' %>
			      <%= f.text_area :content, class: 'mdl-textfield__input', rows: 20 %>
			    </div>

			    <%= fields_for :relevant_tags do |t| %>
			    	<%= t.label :summer_programs, class: "checkbox inline" do %>
						<%= t.check_box :summer_programs %>
						<span>Summer Programs</span>
					<% end %>

					<%= t.label :scholarships, class: "checkbox inline" do %>
						<%= t.check_box :scholarships %>
						<span>Scholarships</span>
					<% end %>
					
					<%= t.label :stem, class: "checkbox inline" do %>
						<%= t.check_box :stem %>
						<span>STEM</span>
					<% end %>

					<%= t.label :humanities, class: "checkbox inline" do %>
						<%= t.check_box :humanities %>
						<span>Humanities</span>
					<% end %>

					<%= t.label :computer_science, class: "checkbox inline" do %>
						<%= t.check_box :computer_science %>
						<span>Computer Science</span>
					<% end %>

					<%= t.label :traveling, class: "checkbox inline" do %>
						<%= t.check_box :traveling %>
						<span>Traveling</span>
					<% end %>

					<%= t.label :community_service, class: "checkbox inline" do %>
						<%= t.check_box :community_service %>
						<span>Community Service</span>
					<% end %>

					<%= t.label :research, class: "checkbox inline" do %>
						<%= t.check_box :research %>
						<span>Research</span>
					<% end %>

					<%= t.label :internships, class: "checkbox inline" do %>
						<%= t.check_box :internships %>
						<span>Internships</span>
					<% end %>

					<%= t.label :arts, class: "checkbox inline" do %>
						<%= t.check_box :arts %>
						<span>Arts</span>
					<% end %>
				<% end %>

			    <%= f.submit "Post", class: "btn btn-primary" %>
			<% end %>
		</div>
	</div>
</div>