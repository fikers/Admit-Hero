<% provide(:title, "Log in") %>

<div class="top-margin" style="background-image:url(http://newdeserttimes.com/wp-content/uploads/2010/01/bigstockphoto_stlouis_arch_4869358.jpg);background-size:cover;min-height:600px">

<h1>Log in</h1>
  <div><% flash.each do |message_type, message| %>
		<div class="alert alert-<%= message_type %>"><%= message %></div>
	<% end %></div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
    

      <%= f.label :email %>
      <%= f.email_field :email, class: 'mdl-textfield__input' %>
      
      </br></br>
      
      <%= f.label :password %>
      <%= link_to "(forgot password)", new_password_reset_path %>
      <%= f.password_field :password, class: 'mdl-textfield__input' %>
      
      </br></br>

      <%= f.label :remember_me, class: "checkbox inline" do %> 
      	<%= f.check_box :remember_me %>
		<span>Remember me on this computer</span>
	  <% end %>

      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>

</div>