<% provide(:title, "Log in") %>

<div class="top-margin car">
<div class="start">

<h2 id="title">Log in</h2>
  <div><% flash.each do |message_type, message| %>
		<div class="alert alert-<%= message_type %>"><%= message %></div>
	<% end %></div>


  <div class="col-md-6">
    <%= form_for(:session, url: login_path) do |f| %>
    
      <div class="mdl-textfield mdl-js-textfield textfield-demo">
      <%= f.label :email, class: 'mdl-textfield__label' %>
      <%= f.email_field :email, class: 'mdl-textfield__input' %>
      </div>
      
      <div class="mdl-textfield mdl-js-textfield textfield-demo">
      <%= f.label :password, class: 'mdl-textfield__label' %>
      <%= f.password_field :password, class: 'mdl-textfield__input' %>
      </div>
      <a href='reset' class="linker">(forgot password)</a>
      <!--<%= link_to "(forgot password)", new_password_reset_path %>-->

      <%= f.label :remember_me, class: "checkbox inline" do %> 
      </br>
      <%= f.check_box :remember_me %>
		  <span>~ Remember me on this computer</span>
	  <% end %>

      <%= f.submit "Log in", class: "btn btn-primary star" %>
    <% end %>

    <!--<p>New user? <%= link_to "Sign up now!", signup_path %></p>-->
    <p>New user? <a href='/users/new' class="linker">Sign up now!</a></p>
  </div>
</div>
</div>
</div>