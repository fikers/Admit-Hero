<div id="mouse">
      
      
	<div class="center-title">
		<h1 class="title">Welcome to Admit Hero</h1>
	</div>

  <div class="col-md-6 col-md-offset-3 sign-up-form">
    <%= form_for(@user) do |f| %>
    	<%= render 'shared/error_messages' %>
    	
			<div class="mdl-textfield mdl-js-textfield textfield-demo user-text">
      	<%= f.label :name, class: 'mdl-textfield__label' %>
      	<%= f.text_field :name, class: 'mdl-textfield__input' %>
      </div>

      <div class="mdl-textfield mdl-js-textfield textfield-demo user-text">
      	<%= f.label :email, class: 'mdl-textfield__label' %>
      	<%= f.email_field :email, class: 'mdl-textfield__input' %>
      </div>

      <div class="mdl-textfield mdl-js-textfield textfield-demo user-text">
      	<%= f.label :password, class: 'mdl-textfield__label' %>
      	<%= f.password_field :password, class: 'mdl-textfield__input' %>
      </div>

      <div class="mdl-textfield mdl-js-textfield textfield-demo user-text">
      	<%= f.label :password_confirmation, class: 'mdl-textfield__label' %>
      	<%= f.password_field :password_confirmation, class: 'mdl-textfield__input' %>
      </div>

      	<%= f.submit "Create my account", class: "mdl-button mdl-js-button mdl-button--raised mdl-button--colored create-button" %>
    <% end %>
  
</div>
</div>

